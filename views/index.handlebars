
<br>
<h2>Cadastrar Pessoas</h2>

{{# if alerta}}


<div class="alert alert-danger" role="alert">
  Sem Pessoas Cadastradas
</div>

{{ else }}

<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Data Nascimento</th>
      <th scope="col">Telefone</th>
      <th scope="col">CEP</th>
      <th scope="col">AÇÃO</th>
    </tr>
  </thead>
  <tbody>
    {{# each pessoas}}
    <tr>
      <td>{{ upperCase this.nome}}</td>
      <td>{{ formataData this.data_nascimento}}</td>
      <td>{{this.telefone}}</td>
      <td>{{this.cep}}</td>
      <td><a href="/excluir" class="btn btn-danger">EXCLUIR</a></td>
    </tr>
    {{/ each}}
  </tbody>
</table>
{{/ if}}
